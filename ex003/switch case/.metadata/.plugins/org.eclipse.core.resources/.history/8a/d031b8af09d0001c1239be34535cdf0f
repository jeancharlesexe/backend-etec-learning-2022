import java.util.Scanner;
public class Buffet {
	public static void main (String [] args ) {
		Scanner in = new Scanner (System.in);
		int salao, decoracao, orcamento;
		System.out.println("Digite o número do salão que voce deseja:"
				+ "\n"
				+ "1 - Ouro"
				+ "\n"
				+ "2 - Diamante"
				+ "\n");
	salao = in.nextInt();
	switch (salao) {
	case 1 :
		salao = 370;
		System.out.println("Este salão custa R$"+salao+" reais.");
		break;
	case 2 :
		salao = 520;
		System.out.println("Este salão custa R$"+salao+" reais.");
		break;
	default :
		System.out.println ("Salão desconhecido.");
	}
	System.out.println("Digite o número da decoração que você deseja:"
			+ "\n"
			+ "1 - Amarilis"
			+ "\n"
			+ "2 - Violeta"
			+ "\n"
			+ "2"
			+ "3 - Orquídea"
			+ "\n"
			+ "5 - Lírio"
			+ "\n");
	decoracao = in.nextInt();
	switch (decoracao) {
	case 1 :
		decoracao = 250;
		System.out.println("Esta decoração custa R$"+decoracao+" reais");
		break;
	case 2 :
		decoracao = 250;
		System.out.println("Esta decoração custa R$"+decoracao+" reais");
		break;
	case 3 :
		decoracao = 360;
		System.out.println("Esta decoração custa R$"+decoracao+" reais");
		break;
	case 4 :
		decoracao = 360;
		System.out.println("Esta decoração custa R$"+decoracao+" reais");
		break;
	default : 
		System.out.println("Decoração desconhecida");
	}
	orcamento = salao + decoracao;
	System.out.println("Seu orçamento final é R$"+orcamento);
	}
}
