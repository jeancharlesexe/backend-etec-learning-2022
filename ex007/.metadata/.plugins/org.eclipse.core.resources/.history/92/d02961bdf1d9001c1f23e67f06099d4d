import java.util.Scanner;
public class Imc {
	public static void main (String [] args) {
		Scanner in = new Scanner (System.in);
		double peso, altura, imc;
		try {
		System.out.println("Digite seu peso: ");
		peso = in.nextDouble();
		System.out.println("Digite sua altura: ");
		altura = in.nextDouble ();
		imc = peso / (altura * altura);
		if (imc < 17) {
			System.out.println("Muito abaixo do peso. Seu IMC é "+imc);
		} else if (imc < 18.49) {
			System.out.println("Abaixo do peso. Seu IMC é "+imc);
		} else if (imc < 24.99) {
			System.out.println("Peso normal. Seu IMC é "+imc);
		} else if (imc < 34.99) {
			System.out.println("Obesidade I. Seu IMC é "+imc);
		} else if (imc < 39.99) {
			System.out.println("Obesidade II (severa). Seu IMC é "+imc);
		} else if (imc > 40) {
			System.out.println("Obesidade III (mórbida). Seu IMC é "+imc);
		} else {
			System.out.println("Peso ou altura inválida. Seu IMC é "+imc);
		} 	} catch (Exception erro) {
			System.out.println("Digite apenas os números indicados. \n"
					+"Erro :"+erro+"\n"
					+"-------------execute novamente-------------");
		}
	}
}
